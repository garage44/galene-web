{
  "name": "@garage44/pyrite",
  "version": "1.5.4-beta.1",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "deploy": "npm run build;cd dist;zip -r pyrite.zip .;curl -X POST -F 'distFile=@pyrite.zip' $RAND_ENDPOINT -H \"Authorization: Basic $(echo \"$RAND_USER:$RAND_PW\" | base64)\"",
    "dev": "vite",
    "build": "vite build",
    "galene": "docker-compose -f docker/docker-compose.yml --project-directory ./docker up --remove-orphans",
    "lint": "yarn lint:js;yarn lint:css",
    "lint:js": "eslint \"src/**/{*.js,*.vue}\"",
    "lint:css": "stylelint 'src/css/**/*.css'",
    "prepublishOnly": "npm run build",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "vue": "^3.0.5",
    "vue-i18n": "^9.0.0-rc.4",
    "vue-router": "^4.0.2"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@vitejs/plugin-vue": "^1.0.4",
    "eslint": "^7.16.0",
    "eslint-plugin-sort-class-members": "^1.9.0",
    "eslint-plugin-vue": "^7.3.0",
    "postcss-import": "^12.0.1",
    "postcss-nesting": "^7.0.1",
    "semantic-release": "^17.3.2",
    "stylelint": "^13.7.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-order": "^4.1.0",
    "vite": "^2.0.0-beta.61"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/garage44/pyrite.git"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "beta",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
